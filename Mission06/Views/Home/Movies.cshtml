


@{
    ViewData["Title"] = "Movie Form";
}

@model Mission06.Models.ApplicationResponse

<h1>Fill out movie form</h1>

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" /><br />

        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category m in ViewBag.Categories)
            {
                <option value="@m.CategoryId">@m.CategoryName</option>

            }
        </select><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="1">G</option>
            <option value="2">PG</option>
            <option value="3">PG-13</option>
            <option value="4">R</option>
        </select><br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" /><br />

        <button type="submit">Submit</button>

    </form>
</div>
